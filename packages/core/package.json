{
  "name": "@cornerkit/core",
  "version": "1.0.0",
  "description": "Lightweight library for iOS-style squircle corners",
  "type": "module",
  "sideEffects": false,
  "main": "dist/cornerkit.js",
  "module": "dist/cornerkit.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/cornerkit.esm.js",
      "require": "./dist/cornerkit.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "build:watch": "rollup -c -w",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:integration": "playwright test",
    "test:integration:ui": "playwright test --ui",
    "test:performance": "playwright test tests/performance --reporter=list",
    "analyze-bundle": "node scripts/analyze-bundle.js",
    "verify-bundle-size": "node scripts/verify-bundle-size.js",
    "preview": "http-server -p 5173 -c-1 --cors",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "squircle",
    "corner",
    "border-radius",
    "superellipse",
    "ios",
    "ui",
    "css"
  ],
  "author": "cornerKit Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cornerkit/cornerkit.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/cornerkit/cornerkit/issues"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.55.0",
    "happy-dom": "^15.11.7",
    "prettier": "^3.1.0",
    "rollup": "^4.6.1",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.8.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
